{
	"name": "Cookie Consent Manager",
	"version": "1.0.0",
	"description": "Automatically handles cookie consent dialogs with UK/EU GDPR compliance",
	"manifest_version": 3,
	"permissions": [
		"storage",
		"activeTab",
		"scripting",
		"alarms"
	],
	"host_permissions": [
		"<all_urls>"
	],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "images/favicon-16x16.png",
			"48": "images/android-icon-48x48.png",
			"128": "images/android-icon-144x144.png"
		}
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"],
			"run_at": "document_idle"
		}
	],
	"icons": {
		"16": "images/favicon-16x16.png",
			"48": "images/android-icon-48x48.png",
			"128": "images/android-icon-144x144.png"
	},
	"author": "Your Company Ltd (UK)",
	"homepage_url": "https://yourcompany.co.uk/cookie-consent-manager",
	"privacy_policy_url": "https://yourcompany.co.uk/cookie-consent-manager/privacy",
	"incognito": "split"
} 